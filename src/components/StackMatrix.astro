---
import { stackMatrix } from '../data/stack-matrix';
---

<div class="space-y-6">
  {stackMatrix.map(item => (
    <div>
      <div class="flex justify-between text-sm font-medium text-zinc-700 dark:text-zinc-300">
        <span data-es={item.label.es} data-en={item.label.en}>
          {item.label.es}
        </span>
        <span>
          {item.level}/5
       </span>
      </div>

      <div class="mt-2 h-2 w-full rounded-full bg-zinc-200 dark:bg-white/10">
        <div
          class="h-2 rounded-full bg-cyan-500"
          style={`width: ${item.level * 20}%`}
        />
      </div>
    </div>
  ))}
</div>
